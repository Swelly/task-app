<div class="task-form container-fluid">
  <%= form_for @team do |f| %>
    <div class="row">
      <div class="form-group col-md-6">
        <%= f.label :name, for: "input-team-name" %>
        <%= f.text_field :name, class: "form-control", id: "input-team-name" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <button type="submit" class="btn btn-success">Submit</button>
      </div>
    </div>
  <% end %>
</div>
