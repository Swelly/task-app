<div class="page-header">
  <h1>World of Tasks</h1>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h2>Log in</h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="form-group col-md-4 col-md-offset-4">
        <%= f.label :email, for: "input-email" %>
        <%= f.email_field :email, class: "form-control", id: "input-email", autofocus: true %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-4 col-md-offset-4">
        <%= f.label :password, for: "input-password" %>
        <%= f.password_field :password, class: "form-control", id: "input-password", autocomplete: "off" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="row">
        <div class="form-group col-md-4 col-md-offset-4">
          <%= f.check_box :remember_me %> <%= f.label :remember_me %>
        </div>
      </div>
    <% end -%>

    <div class="row">
      <div class="form-group col-md-4 col-md-offset-4">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
